# API Configuration
REACT_APP_API_URL=http://localhost:3001/api

# App Configuration
REACT_APP_NAME=Refugee Learning Platform Dashboard
REACT_APP_VERSION=1.0.0

# Build Configuration
GENERATE_SOURCEMAP=false
BUILD_PATH=build

# Environment
NODE_ENV=production

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_OFFLINE_MODE=true
REACT_APP_ENABLE_PWA=true

# Internationalization
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_SUPPORTED_LANGUAGES=en,sw,ar,fr

# Upload Configuration
REACT_APP_MAX_UPLOAD_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# WebSocket Configuration (for real-time features)
REACT_APP_WEBSOCKET_URL=ws://localhost:3001

# Offline Configuration
REACT_APP_CACHE_STRATEGY=CacheFirst
REACT_APP_CACHE_DURATION=86400000
